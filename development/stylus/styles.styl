body
  background white
  fontMedium()

header div:nth-of-type(1)
  size: 16.5rem
  absolute()
  top 0rem
  left 50%
  margin 0 0 0 -8.75rem
  z(9)
  bg white
  br(100%)
  a
   background url(../img/logo.png)
   block()
   relative()
   centered(1.5rem,0)
   size: 13.5rem, 13.5rem


header .wrapper
  > ul
    w100()
    z(99)
    {tCenter}
    > li
      inlineBlock()
      > a
         block()
         color grey
         fs(1.3rem, 12rem, normal)
         height 12rem
         padding: 0 2.5rem;
         upper()
         border-top .4rem solid white
         &:hover
         &.activeMenu
          color $blue
          {nounder}
          border-top .4rem solid $blue
      &:nth-of-type(5)
          margin: 0 0 0 15rem
      &:nth-of-type(1)
       margin 0 0 0 -6rem

figure.banner
  size: 100%, 52.5rem
  {cPointer}
  relative()
  {cero}
  img
   filter blur(.3rem)
   {cero}
   size(100%)
  div.overBanner
   size: 100%, 52.5rem
   absolute: top 0 left 0
   background url(../img/overBanner.png)
  div.wrapper
   absolute: top 0 left 50%
   {tCenter}
   margin: 0 0 0 -60rem
   {maxWidth}
   div.textBanner
    color white
    fs(4.5rem,120%, normal)
    border-top .1rem solid white
    border-bottom .1rem solid white
    padding 1.5rem 0
    {maxWidth}
    fontLight()
    upper()
    {tCenter}
    {relative}
    centered(15rem,6rem)
    relative()
   b
    fontMedium()
    inlineBlock()

a.btnWhite
 border .2rem solid white
 btn()
 &:hover
  br(1rem)

a.btnBluespin
 border .2rem solid white
 btn()
 &:hover
  br(1rem)

a.btnBlue
 border .2rem solid $blueLight
 bg($blueLight)
 btn()
 &:hover
  transform rotateX(360deg)
  border .2rem solid $blueDark
  bg($blueDark)

a.btnYellow
button.btnYellow
 border .2rem solid $yellow
 bg($yellow)
 btn()
 &:hover
  border .2rem solid $blue
  bg($blue)


figure.banner::before
 content ''
 size(4rem)
 bg(white)
 block()
 absolute: bottom 0 left 50%
 z(9999)
 transform rotate(45deg)
 margin 0 0 -2.5rem -2rem

figure.banner::after
 content '\f107'
 size(4rem, 2rem)
 block()
 absolute: bottom 0 left 50%
 z(9999)
 fs(1.8rem, 100%, lighter)
 color $blue
 margin 0 0 -.5rem -2rem
 font-family FontAwesome
 text-align center

div.bulletNav
 absolute: top 40% left 3%
 size(2rem, 4rem)
 a
  size(1.5rem)
  br(100%)
  bg(rgba(255,255,255,.8))
  margin: 0 0 1rem

div.bulletNav a.active
  border .3rem solid white
  bg(rgba(255,255,255,0))

section.map
 relative()
 margin 8rem 0 0
 h2
  color $grey
  fs(2.4rem, 100%, normal)
  upper()
  fontLight()
  {tCenter}



section.rss
 inlineBlock()
 size(48%,44rem)
 margin 8rem 0
 b1()

aside.twitter
 inlineBlock()
 size(48%, 44rem)
 b2()

section.contentBottom
