 bg($greySpin)
 p
  fs(2.4rem, 14.5rem, normal)
  color $greySpin - 40%
  fontRegular()
 a
  absolute: bottom 5rem right 1rem
  {tCenter}



/*Internal Sections*/

.aboutus article
  padding 1rem 1rem 2rem
  margin 4rem 0 0
  gradient(top, #ffffff, #ffffff)
  border-bottom thin dotted $grey
  img
   size(40rem, 24rem)
   {imgBorder}
   {fLeft}
  h2
   {fRight}
   size(76rem, auto)
  p
   {fRight}
   size(76rem, auto)

.ourservices article
  padding 1rem 1rem 3rem
  margin 4rem 0 0
  gradient(top, #ffffff, #fffff1)
  relative()
  &::before
   content ''
   size(1rem)
   block()
   absolute: bottom 0 left 50%
   z(9999)
   transform rotate(45deg)
   margin 0 0 -.5rem -.5rem


.ourservices article:nth-of-type(odd)
  border-bottom .3em solid $yellow
  &::before
   bg($yellow)

.ourservices article:nth-of-type(even)
  border-bottom .3em solid $blue
  &::before
   bg($blue)


